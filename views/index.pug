extends layout

block content
  script(src="https://cdn.jsdelivr.net/npm/interactjs/dist/interact.min.js")
  script(type='module' src='/javascripts/customRadio.js')
  script(src='/javascripts/domFuncs.js')
  script(src='/javascripts/dragAndDrop.js')
  script(src='/javascripts/serverCom.js')

  div(id='mainContainer')
    div(id='messageBoard' class='dropzone')
    div(id='optionSidebar')
      div(class='post-it')
      div(class='post-it drag-drop')
        textarea(type='text' class='message' id='draggedMessage' placeHolder='Write something nice?')
      div(id='color-selector')
        div(class='color-circle color-selected')
        div(class='color-circle')
        div(class='color-circle')
  div(id='custom-radio')
  script.
    updateClientData()

